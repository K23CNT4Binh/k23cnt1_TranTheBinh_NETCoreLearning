@model TtbLesson07.Models.TtbEmployee

@{
    ViewData["Title"] = "Xóa sinh viên";
    Layout = "~/Views/Shared/_TtbLayout.cshtml";
}

<h1>XÓA SINH VIÊN</h1>

<h3>Bạn có chắc chắn muốn xóa sinh viên này?</h3>
<div>
    <h4>@Model.TtbName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.TtbEmail</dd>

        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.TtbPhone</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">
            @if (Model.TtbStatus)
            {
                <span class="badge bg-success">Hoạt động</span>
            }
            else
            {
                <span class="badge bg-danger">Không hoạt động</span>
            }
        </dd>
    </dl>

    <form asp-action="TtbDeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TtbId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="TtbIndex" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
