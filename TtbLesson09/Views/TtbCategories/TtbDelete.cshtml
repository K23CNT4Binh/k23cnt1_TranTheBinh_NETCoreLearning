@model TtbLesson09.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="text-danger">@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa danh mục này không?</h3>

<div>
    <h4>Thông tin danh mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>

        <dt class="col-sm-2">Tên danh mục</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
    </dl>

    <form asp-action="TtbDelete" method="post">
        @Html.AntiForgeryToken() <!-- Tùy chọn, nếu bạn không dùng thì bỏ qua -->
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Xóa" name="btnTtbDelete" class="btn btn-danger" />
        <a asp-action="TtbIndex" class="btn btn-secondary ms-2">Hủy</a>
    </form>

</div>
