@model TtbLesson09.Models.Publisher

@{
    ViewData["Title"] = "Thêm mới nhà xuất bản";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>

                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="PublisherName" class="control-label"></label>
                        <input asp-for="PublisherName" class="form-control" />
                        <span asp-validation-for="PublisherName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Quay về danh sách</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
